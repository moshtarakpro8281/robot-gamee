<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="game.SettingsController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="نوع بازی را انتخاب کنید:"/>

    <RadioButton fx:id="pvpRadio" text="بازیکن با بازیکن" selected="true"/>
    <RadioButton fx:id="pvAIRadio" text="بازیکن با هوش مصنوعی"/>
    <RadioButton fx:id="aiVsAiRadio" text="هوش مصنوعی با هوش مصنوعی"/>

    <Label text="ابعاد نقشه را تنظیم کنید:"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="عرض:"/>
        <Spinner fx:id="widthSpinner" prefWidth="80"/>
        <Label text="ارتفاع:"/>
        <Spinner fx:id="heightSpinner" prefWidth="80"/>
    </HBox>

    <Button text="تأیید" onAction="#handleConfirm"/>
</VBox>

