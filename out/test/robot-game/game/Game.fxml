<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.GameController">
    <top>
        <VBox fx:id="topVBox" alignment="CENTER" spacing="5" style="-fx-padding: 10;">
            <HBox fx:id="ammoHBox" alignment="TOP_LEFT" prefHeight="31.0" prefWidth="470.0" spacing="10">
                <Label fx:id="ammoLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" text="Ammo: 0" />
                <Label fx:id="activeAmmoLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: red;" text="" />
            </HBox>
            <VBox fx:id="healthVBox" alignment="CENTER" spacing="2">
                <HBox fx:id="healthRow1" alignment="CENTER" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Robot 1 - Ammo: 10" />
                    <Pane fx:id="health1" style="-fx-background-color: transparent;" />
                </HBox>
                <HBox fx:id="healthRow2" alignment="CENTER" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Robot 2 - Ammo: 10" />
                    <Pane fx:id="health2" style="-fx-background-color: transparent;" />
                </HBox>
                <HBox fx:id="healthRow3" alignment="CENTER" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Robot 3 - Ammo: 10" />
                    <Pane fx:id="health3" style="-fx-background-color: transparent;" />
                </HBox>
                <HBox fx:id="healthRow4" alignment="CENTER" spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Robot 4 - Ammo: 10" />
                    <Pane fx:id="health4" style="-fx-background-color: transparent;" />
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="mapGrid" alignment="CENTER" hgap="0" prefHeight="390.0" prefWidth="390.0" style="-fx-background-color: lightgray; -fx-padding: 0;" vgap="0" GridPane.halignment="CENTER">
            <columnConstraints>
