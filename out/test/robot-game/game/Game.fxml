                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <AnchorPane prefHeight="82.0" prefWidth="419.0" style="-fx-padding: 10;">
            <children>
                <Button fx:id="selectRobot1Button" layoutX="10.0" layoutY="10.0" onAction="#selectRobot1" prefHeight="26.0" prefWidth="64.0" text="Robot 1" textFill="#3e9c46" style="-fx-background-color: #a9a9a9;" />
                <Button fx:id="selectRobot2Button" layoutX="76.0" layoutY="10.0" onAction="#selectRobot2" prefHeight="26.0" prefWidth="54.0" text="Robot 2" textFill="#3e9c46" style="-fx-background-color: #a9a9a9;" />
                <Button fx:id="selectRobot3Button" layoutX="127.0" layoutY="9.0" onAction="#selectRobot3" prefHeight="26.0" prefWidth="65.0" text="Robot 3" textFill="#3e9c46" style="-fx-background-color: #a9a9a9;" />
                <Button fx:id="selectRobot4Button" layoutX="196.0" layoutY="10.0" onAction="#selectRobot4" prefHeight="26.0" prefWidth="63.0" text="Robot 4" textFill="#3e9c46" style="-fx-background-color: #a9a9a9;" />
                <Button fx:id="moveLeftButton" layoutX="63.0" layoutY="40.0" mnemonicParsing="false" onAction="#moveRobotLeft" prefWidth="40" text="←" textFill="#1e5cec" style="-fx-background-color: #d3d3d3;">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Button>
                <Button fx:id="moveUpButton" layoutX="103.0" layoutY="35.0" mnemonicParsing="false" onAction="#moveRobotUp" prefHeight="21.0" prefWidth="40" text="↑" textFill="#2356e4" style="-fx-background-color: #d3d3d3;">
                    <font><Font name="System Bold" size="8.0" /></font>
                </Button>
                <Button fx:id="moveDownButton" layoutX="103.0" layoutY="56.0" mnemonicParsing="false" onAction="#moveRobotDown" prefWidth="40" text="↓" textFill="#1720d4" style="-fx-background-color: #d3d3d3;">
                    <font><Font name="System Bold" size="9.0" /></font>
                </Button>
                <Button fx:id="moveRightButton" layoutX="144.0" layoutY="41.0" mnemonicParsing="false" onAction="#moveRobotRight" prefHeight="14.0" prefWidth="40.0" text="→" textFill="#2808e1" style="-fx-background-color: #d3d3d3;">
                    <font><Font name="System Bold" size="15.0" /></font>
                </Button>
                <Button fx:id="shootButton" layoutX="210.0" layoutY="40.0" onAction="#shoot" prefWidth="80" text="شلیک" textFill="#ff0000" style="-fx-background-color: #ffcccc;" wrapText="true">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
                <Button layoutX="300.0" layoutY="40.0" onAction="#handleStart" prefWidth="80" text="شروع بازی" style="-fx-background-color: #90ee90;" />
                <Button layoutX="390.0" layoutY="10.0" onAction="#handleExit" prefWidth="80" text="خروج" style="-fx-background-color: #ff6347;" />
                <Button layoutX="299.0" layoutY="9.0" onAction="#handleSettings" prefHeight="26.0" prefWidth="82.0" text="تنظیمات" style="-fx-background-color: #add8e6;" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>