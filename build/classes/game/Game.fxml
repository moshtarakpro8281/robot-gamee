<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.GameController">

    <top>
        <Label style="-fx-font-size: 24px; -fx-padding: 10;" text="نقشه بازی" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <GridPane fx:id="mapGrid" alignment="CENTER" hgap="2" style="-fx-background-color: lightgray; -fx-padding: 10;" vgap="2" GridPane.halignment="CENTER">
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#moveRobotUp" prefHeight="38.0" text="Move Up" wrapText="true" />
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                      <Button fx:id="shootButton" mnemonicParsing="false" onAction="#shootAtTarget" text="Shoot" />
                    </buttons>
                  </ButtonBar>
              </buttons>
            </ButtonBar>
         </children></GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
            <Button onAction="#handleStart" text="شروع بازی" />
            <Button onAction="#handleSettings" text="تنظیمات" />
            <Button onAction="#handleExit" text="خروج" />
        </HBox>
    </bottom>

</BorderPane>
